<%- include("partials/loginheader") -%>

<div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
        <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
          <button type="submit" class="btn btn-twitter">Login</button>
        </form>
        <span><%= credentials %></span>
        </div>
      </div>
    </div>
    <script defer src="https://slack-support-stage.ringover-crm.xyz/js-livechat-iframe/main.js" userCdnId="PRaTzOU1KuSb1oyonnt7L"></script>      <link rel="stylesheet" href="https://slack-support-stage.ringover-crm.xyz/css-livechat-iframe/main.css"/>
</div>

